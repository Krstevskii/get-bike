<div id="contactMain">
    {{> _msg}}
    <p class="h2">Contact</p>
    <form method="post" action="/en/contact-us">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label for="inputEmail4">First name:</label>
                <input type="text" name="firstname" class="form-control" id="inputEmail4" placeholder="First name">
            </div>
            <div class="form-group col-md-4">
                <label for="inputPassword4">Last name:</label>
                <input type="text" name="lastname" class="form-control" id="inputPassword4" placeholder="Last name">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-7">
                <label for="inputAddress"><span style="color: red">*</span>E-mail:</label>
                <input type="email" name="email" class="form-control" id="inputAddress" placeholder="Email" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-7">
                <label for="inputAddress">Subject:</label>
                <input type="text" name="subject" class="form-control" id="inputAddress" placeholder="Subject">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-7">
                <label for="exampleFormControlTextarea1"><span style="color: red">*</span>Message:</label>
                <textarea class="form-control" name="message" id="exampleFormControlTextarea1" rows="4" maxlength="500" ></textarea>
            </div>
        </div>

        <button type="submit" class="btn btn-secondary">Submit</button>
    </form>
    <p class="h6">Fields marked with (<span style="color: red">*</span>) are mandatory</p>
</div>